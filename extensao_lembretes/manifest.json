{
  "manifest_version": 3,
  "name": "Lembrete de Tickets",
  "version": "1.1",
  "description": "Agenda lembretes e lista tarefas pendentes.",
  "permissions": [
    "storage", 
    "alarms",
    "offscreen",
    "tabs"
  ],
  "action": {
    "default_popup": "popup.html", 
    "default_icon": "icon.png"
  },
  "background": {
    "service_worker": "background.js" 
  },
  "icons": {
    "128": "icon.png"
  },
  "web_accessible_resources": [
    {
      "resources": [ "alert.mp3" ],
      "matches": [ "<all_urls>" ]
    }
  ],
  "offscreen": {
    "reasons": ["AUDIO_PLAYBACK"],
    "justification": "Necess√°rio para tocar o som de alerta do lembrete.",
    "path": "offscreen.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
